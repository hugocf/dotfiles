{
    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        },
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[git-commit]": {
        "editor.rulers": [60, 72],
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "yzhang.markdown-all-in-one",
        "files.trimTrailingWhitespace": false,
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[sql]": {
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "bashIde.explainshellEndpoint": "",
    "breadcrumbs.enabled": true,
    "chat.commandCenter.enabled": true,
    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "Fira Code, JetBrains Mono, Source Code Pro, 'Apple Color Emoji', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "alt",
    "editor.renderControlCharacters": true,
    "editor.suggestSelection": "first",
    "editor.unicodeHighlight.invisibleCharacters": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "mixed",
    "files.associations": {
        "Brewfile*": "ruby",
        "mrconfig": "toml"
    },
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "always",
    "markdownlint.config": {
        /* MD004 */ "ul-style": { "style": "sublist" },
        /* MD007 */ "ul-indent": { "indent": 4 },
        /* MD033 */ "no-inline-html": false,
        /* MD036 */ "no-emphasis-as-header": false
    },
    "plantuml.java": "/Users/hugo/.local/share/mise/installs/java/26.0.0/bin/java",
    "redhat.telemetry.enabled": false,
    "shellformat.flag": "--space-redirects",
    "window.autoDetectColorScheme": true,
    "window.openFilesInNewWindow": "on",
    "window.restoreWindows": "none",
    "workbench.colorTheme": "Alabaster",
    "workbench.preferredLightColorTheme": "Alabaster Light",
    "workbench.startupEditor": "none",
    "workbench.activityBar.location": "top",
    "workbench.preferredDarkColorTheme": "Alabaster Dark",
}