# [includeIf "gitdir:~/work/"]	$ TODO: does it work with `~/.local/work -> "~/Work/Springer Nature/C/Code"?
# 	path = ~/work/.gitconfig    # TODO: Link this properly to the local `.dotfiles_work` repo
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
[color "interactive"]
	prompt = green bold
	help = yellow bold
	error = red bold
[color "status"]
	changed = yellow
	untracked = cyan
[alias]
	br = branch -a -vv 
	co = checkout
	refdate = reflog --date=iso
	graph = log --graph --all --oneline
	tree = log --graph --all --oneline
	register = "!git clone $1 $(basename $1) && mr register $(basename $1)"
	shove = push --force-with-lease
	st = status --short
	# https://stackoverflow.com/a/1441062
	when = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso
	who = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
[commit]
	gpgsign = true
	template = ~/.config/git/commit
[core]
	attributesfile = ~/.config/git/attributes   # default
	autocrlf = input
	compression = 9
	excludesfile = ~/.config/git/ignore         # default
[diff]
	renames = copies
	submodule = log
[fetch]
	prune = true
[gpg]
	format = ssh
[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[gui]
	encoding = utf-8
[init]
	defaultBranch = main
[merge]
	log = true
[rebase]
	autoStash = true
	autosquash = true
[pull]
	rebase = true
[push]
	autoSetupRemote = true

# Project urls
[url "git@github.com"]
	insteadOf = github
