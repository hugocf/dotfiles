[user]
	name = Hugo Ferreira
	email = hugo@ferreira.cc
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
[color "interactive"]
	prompt = green bold
	help = yellow bold
	error = red bold
[color "status"]
	changed = yellow
	untracked = cyan
[alias]
	br = branch -a -vv 
	co = checkout
	st = status --short
	refdate = reflog --date=iso
	graph = log --graph --all --oneline
	tree = log --graph --all --oneline
	# https://stackoverflow.com/a/18442755
	update = pull --rebase origin master
	shove = push --force-with-lease
	# https://stackoverflow.com/a/1441062
	when = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=iso
	who = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
[commit]
	template = ~/.dotfiles/git/gitcommit
[core]
	attributesfile = ~/.dotfiles/git/gitattributes
	autocrlf = input
	compression = 9
	excludesfile = ~/.dotfiles/git/gitignore
[diff]
	renames = copies
	submodule = log
[fetch]
	prune = true
[gui]
	encoding = utf-8
[init]
	defaultBranch = main
[merge]
	log = true
[rebase]
	autoStash = true
	autosquash = true
[pull]
	rebase = true
[push]
	# See http://stackoverflow.com/a/948397
	default = simple

# Project urls
[url "git@github.com"]
	insteadOf = github
